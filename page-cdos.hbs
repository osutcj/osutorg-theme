    width: 80vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    word-break: break-word;
  }

  .mt-1 {
    margin-top: 1rem !important;
  }

  @media (max-width: 768px) {
    .text-outline, .highlight {
      font-size: 36px;
    }

    .button-download {
      font-size: 16px;
      padding: 12px 24px;
      max-width: 90%;
    }

    .button-container {
      flex-direction: column;
    }

    .reprez {
      padding: 1.5rem;
      width: 90vw;
    }
  }

  @media (min-width: 1024px) {
    .reprez {
      width: 500px;
    }
  }
</style>


