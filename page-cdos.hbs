    justify-content: center;
    padding: 0 20px;
    box-sizing: border-box;
  }

          .text-outline {
  font-size: clamp(24px, 8vw, 50px); /* dimensiune între 24px și 50px, scalabilă cu viewport */
  font-weight: bold;
  color: transparent;
  -webkit-text-stroke: 1px white;
  text-transform: uppercase;
  text-align: center;
  display: block;
  width: 100%;
}


  .highlight {
    -webkit-text-stroke: 1px RED;
  }

  .button-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin-bottom: 10vh;
    padding: 0 20px;
  }

  .button-download {
    background-color: #a50000;
    color: black;
    font-size: 18px;
    font-weight: bold;
    text-align: center;
    padding: 15px 40px;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    display: inline-block;
    width: 100%;
    max-width: 300px;
    transition: 0.3s ease-in-out;
  }

  .button-download:hover {
    background-color: #800000;
  }

  .scroll-container {
    overflow-x: auto;
    overflow-y: hidden;
    white-space: nowrap;
    width: 90%;
    max-width: 100%;
    margin: 0 auto;
    display: flex;
    scrollbar-width: none;
  }

  .scroll-container::-webkit-scrollbar {
    display: none;
  }

  .scroll-container img {
    height: 50vh;
    object-fit: cover;
  }

  .reprez {
    margin: 2rem auto;
    padding: 2rem;
    max-width: 600px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 16px;
