{{!< default}} {{#post}} {{> header background=feature_image}}
  {{/post}}

  <style>
    html,
    body {
      height: 100%;
      margin: 0;
    }

    body {
      background-image: url("{{asset 'images/sky.jpg'}}");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      background-attachment: fixed;
    }

    .main-wrap {
      background: none;
    }

    .img-container {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 90%;
      margin-top: 10vh;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
    }

    .img-center {
      display: block;
      width: 100%;
      height: auto;
      filter: drop-shadow(0px 0px 9px white);
      border-radius: 5%;
    }

    .container {
      text-align: center;
      width: 90%;
      margin: 10px auto;
    }

    .text-outline {
      font-size: 54px;
      font-weight: bold;
      color: transparent;
      -webkit-text-stroke: 1px white;
      text-transform: uppercase;
      text-align: center;
      display: block;
      width: 100%;
    }

    .highlight {
      font-size: 54px;
      font-weight: bold;
      color: transparent;
      -webkit-text-stroke: 1px RED;
      text-transform: uppercase;
      text-align: center;
      display: block;
      width: 100%;
    }

    .table-fixed {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      border-collapse: collapse;
      table-layout: fixed;
    }

    .table-fixed td {
      width: 33%;
      vertical-align: middle;
      text-align: center;
      padding: 10px;
    }

    .table-fixed img {
      width: 100%;
      height: auto;
      display: block;
      border-radius: 5%;
    }
      .gradient-box-r {
      background: linear-gradient(to right, #000000, #a50000, #000000);
      border-radius: 20px;
      color: white;
      font-weight: bold;
      font-family: Arial, sans-serif;
      width: 100%;
      height: 80px;
      text-align: center;
      font-size: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: auto;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .gradient-box-l {
      background: linear-gradient(to right, #000000, #a50000, #000000);
      border-radius: 20px;
      color: white;
      font-weight: bold;
      font-family: Arial, sans-serif;
      width: 100%;
      height: 80px;
      text-align: center;
      font-size: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: auto;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .button-container {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      margin-bottom: 10vh;
    }

    .button-download {
      background-color: #a50000;
      color: black;
      font-size: 18px;
      font-weight: bold;
      text-align: center;
      padding: 15px 40px;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      display: inline-block;
      width: 300px;
      transition: 0.3s ease-in-out;
    }

    .button-download:hover {
      background-color: #800000;
    }

    .partners-logos {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 5vw;
      background-color: rgba(255, 255, 255, 0.5);
      flex-wrap: wrap;
      padding: 20px;
    }

    .partners-logos img {
      max-height: 100px;
      height: auto;
      width: auto;
      object-fit: contain;
    }

  

    .external-link-icon {
      height: 24px;
      width: 24px;
      display: inline-block;
      vertical-align: middle;
      margin-left: 5px;
    }

    @media (max-width: 768px) {

      .text-outline,
      .highlight {
        font-size: 32px;
      }

      .table-fixed td {
        display: block;
        width: 100%;
      }

      .table-fixed {
        table-layout: auto;
      }

      .button-download {
        width: 80%;
        padding: 10px 20px;
        font-size: 16px;
      }

      .img-container {
        margin-top: 5vh;
      }

      .container {
        width: 95%;
      }

      .main-wrap img {
        max-width: 100%;
        height: auto;
      }

      .partners-logos img {
        max-height: 70px;
      }

      .external-link-icon {
        height: 18px;
        width: 18px;
      }
      .footer {
        padding: 15px 1rem !important;
      }
    }
    
  </style>

