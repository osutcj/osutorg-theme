<link rel="stylesheet" type="text/css" href="{{asset "css/bootstrap-classes.css"}}" media="screen" />

<!-- Carousel -->
<style>
    .container-carousel {
        width: 100%;
        background-color: white;
    }

    h1.carousel-title {
        font-size: 2rem;
        text-align: center;
        color: black;
    }

    h2.carousel-subtitle{
        font-size: 1.1rem;
        text-align: center;
    }
</style>

<div class="container-carousel m-0 p-5 row">

    {{#if title}}
    <h1 class="carousel-title m-5">
        {{title}}
    </h1>
    {{/if}}

    {{#if subtitle}}
    <h2 class="carousel-subtitle m-2 mb-5">
        {{subtitle}}
    </h2>
    {{/if}}

    {{!-- Carousel --}}
    <div class="col-md-6"></div>
    <div id="anunturi" class="carousel slide col-md-6" data-bs-ride="carousel">

        <!-- Indicators/dots -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#anunturi" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#anunturi" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#anunturi" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#anunturi" data-bs-slide-to="3"></button>

            {{!-- {{#for 0 10 2}} 
            <button type="button" data-bs-target="#anunturi" data-bs-slide-to="{{this}}"></button>
            {{/for}} --}}
            {{!-- <button type="button" data-bs-target="#anunturi" data-bs-slide-to="4"></button> --}}
        </div>

        <div class="carousel-inner">
            {{!-- .carousel-item.active*10>img[src="https://picsum.photos/id/$/1920/1080" class="w-100 h-50" alt="Imagine $"] --}}
            <div class="carousel-item active"><img src="https://picsum.photos/id/1/1920/1080" alt="Imagine 1" class="w-100 h-50"></div>
            <div class="carousel-item active"><img src="https://picsum.photos/id/2/1920/1080" alt="Imagine 2" class="w-100 h-50"></div>
            <div class="carousel-item active"><img src="https://picsum.photos/id/3/1920/1080" alt="Imagine 3" class="w-100 h-50"></div>
            <div class="carousel-item active"><img src="https://picsum.photos/id/3/1920/1080" alt="Imagine 3" class="w-100 h-50"></div>
        </div>

        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#anunturi" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#anunturi" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

</div>

