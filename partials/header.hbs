<!-- Responsive OSUT Navbar with Dropdown and Sidebar -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<style>
  * {
    box-sizing: border-box;
  }

  body {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
  }

  .custom-navbar {
    background-color: rgba(68, 68, 68, 0.7);
    padding: 10px 30px;
    border-radius: 50px;
    width: fit-content;
    width: 80%;
    margin: 20px auto;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 30px;
    position: relative;
    z-index: 1000;
  }

  .nav-logo img {
    height: 50px;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 30px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .nav-menu {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin: 0;
    padding: 0;
    justify-content: center;
  }

  .nav-menu li a {
    text-decoration: none;
    color: white;
    font-size: 1.1rem;
    font-weight: 600;
    transition: color 0.3s ease;
    white-space: nowrap;
  }

  .nav-menu li a:hover {
    color: red;
  }

  .dropdown {
    position: relative;
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #444;
    border-radius: 10px;
    padding: 10px 0;
    list-style: none;
    display: none;
    min-width: 200px;
    z-index: 2000;
  }

  .dropdown-menu li a {
    color: white;
    text-decoration: none;
    display: block;
    padding: 5px 20px;
  }

  .dropdown:hover .dropdown-menu {
    display: block;
  }

  .red-button {
    background-color: #a40000;
    color: white;
    font-weight: bold;
    padding: 10px 22px;
    border-radius: 50px;
    text-decoration: none;
    white-space: nowrap;
    font-size: 1rem;
  }

  .red-button:hover {
    background-color: #cc0000;
  }

  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    gap: 5px;
    position: absolute;
    right: 20px;
    top: 20px;
  }

  .hamburger div {
    width: 25px;
    height: 3px;
    background: white;
  }

  .sidebar {
    position: fixed;
    top: 0;
    left: -100%;
    width: 250px;
    height: 100vh;
    background-color: #111;
    display: flex;
    flex-direction: column;
    padding: 30px 20px;
    transition: left 0.4s ease;
    z-index: 9999;
  }

  .sidebar.active {
    left: 0;
  }

  .sidebar a {
    color: white;
    text-decoration: none;
    margin: 12px 0;
    font-weight: 600;
    font-size: 1.1rem;
  }

  .sidebar a:hover {
    color: red;
  }

  .sidebar .red-button {
    display: block;
    margin-top: 20px;
    text-align: center;
    width: 100%;
  }

  .close-btn {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 1.5rem;
    color: white;
    cursor: pointer;
  }

  /* === Responsive for tablets (769px–1024px) === */
  @media screen and (max-width: 1024px) and (min-width: 769px) {
    .nav-menu {
      justify-content: center;
      gap: 10px;
    }

    .nav-menu li a {
      font-size: 0.63rem;
    }

    .red-button {
      font-size: 0.63rem;
      padding: 8px 16px;
    }
  }

  /* === Mobile view === */
  @media screen and (max-width: 768px) {
    .nav-menu,
    .red-button {
      display: none;
    }

    .hamburger {
      display: flex;
    }

    .custom-navbar {
      justify-content: center;
      width: 94%;
    }
  }
.nav-logo {
  display: flex;
